                            <page string="Description" name="description">
                            <button string="Update Description" name="update_description" type="object" class="btn-primary"/>
                                <field name="description"/>
                            </page>
                            <page string="Actions to Do" name="to_do">
                                <field name="actions_todo"/>
                            </page>
                            <page string="Actions" name="actions">
                                <field name="actions_ids">
                                    <tree string="Actions">
                                        <field name="name"/>
                                        <field name="state"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="name"/>
                                            <field name="state"/>
                                        </group>
                                    </form>
                                </field>
