        <field name="model">helpdesk.ticket.tag</field>
        <field name="arch" type="xml">
            <form>
                <!--Header con status bar-->
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="new,assigned,in_process,pending,resolved"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>    
